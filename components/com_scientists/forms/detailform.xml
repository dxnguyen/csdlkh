<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Scientists\Component\Scientists\Site\Field">
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="ordering"/>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" type="hidden" filter="unset"/>
    <field name="name" maxlength="50" filter="safehtml" type="text" required="true" message="Vui lòng nhập" label="COM_SCIENTISTS_FORM_LBL_DETAIL_NAME" description="COM_SCIENTISTS_FORM_DESC_DETAIL_NAME" hint="COM_SCIENTISTS_FORM_LBL_DETAIL_NAME"/>
    <field name="gender" default="0" type="radio" label="COM_SCIENTISTS_FORM_LBL_DETAIL_GENDER" description="COM_SCIENTISTS_FORM_DESC_DETAIL_GENDER" hint="COM_SCIENTISTS_FORM_LBL_DETAIL_GENDER">
      <option value="0">COM_SCIENTISTS_SCIENTISTS_GENDER_OPTION_0</option>
      <option value="1">COM_SCIENTISTS_SCIENTISTS_GENDER_OPTION_1</option>
    </field>
    <field name="birthday" class="inputbox" format="%Y-%m-%d" timeformat="12" filter="server_utc" translateformat="false" showtime="false" singleheader="false" todaybutton="false" weeknumbers="false" filltable="false" type="calendar" label="COM_SCIENTISTS_FORM_LBL_DETAIL_BIRTHDAY" description="COM_SCIENTISTS_FORM_DESC_DETAIL_BIRTHDAY" hint="COM_SCIENTISTS_FORM_LBL_DETAIL_BIRTHDAY"/>
    <field name="address" filter="safehtml" type="text" label="COM_SCIENTISTS_FORM_LBL_DETAIL_ADDRESS" description="COM_SCIENTISTS_FORM_DESC_DETAIL_ADDRESS" hint="COM_SCIENTISTS_FORM_LBL_DETAIL_ADDRESS"/>
    <field name="phone" filter="safehtml" type="text" label="COM_SCIENTISTS_FORM_LBL_DETAIL_PHONE" description="COM_SCIENTISTS_FORM_DESC_DETAIL_PHONE" hint="COM_SCIENTISTS_FORM_LBL_DETAIL_PHONE"/>
    <field name="email" validate="email" type="email" required="true" message="Vui lòng nhập" label="COM_SCIENTISTS_FORM_LBL_DETAIL_EMAIL" description="COM_SCIENTISTS_FORM_DESC_DETAIL_EMAIL" hint="COM_SCIENTISTS_FORM_LBL_DETAIL_EMAIL"/>
    <field name="position" query="select id,title from #__positions" key_field="id" value_field="title" header="--Chọn--" type="sql" layout="joomla.form.field.list-fancy-select" label="COM_SCIENTISTS_FORM_LBL_DETAIL_POSITION" description="COM_SCIENTISTS_FORM_DESC_DETAIL_POSITION" hint="COM_SCIENTISTS_FORM_LBL_DETAIL_POSITION"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
